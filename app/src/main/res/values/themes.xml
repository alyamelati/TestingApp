<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_icon</item>
        <item name="colorPrimaryVariant">@color/blue_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_carousel</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/blue_bg</item>
    </style>

    <color name="grey">#F4F4F4</color>
    <color name="blue_bg">#0455BF</color>
    <color name="blue_title">#202244</color>
    <color name="yellow_icon">#FAC840</color>
    <color name="white_search">#EFEFEF</color>
    <color name="blue_carousel">#1F6CED</color>
    <color name="grey_placeholder">#A4A1A1</color>
    <color name="red_cancel">#DD5050</color>
    <color name="white_bg">#F5F9FF</color>
    <color name="reg_txt">#000000</color>
    <color name="divider">#333333</color>
    <color name="green_onboarding">#51DD2E</color>
    <color name="transparent">#80636363</color>

    <style name="background_colour">
        <item name="background">@color/white_bg</item>
    </style>

    <style name="HeaderBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="title_text">
        <item name="android:fontFamily">@font/jost_bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/blue_title</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/jost</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/reg_txt</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="btn_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/jost_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:colorAccent">@color/blue_carousel</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginLeft">110dp</item>
        <item name="android:layout_marginRight">110dp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="btn_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/jost_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/green_onboarding</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginLeft">110dp</item>
        <item name="android:layout_marginRight">110dp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="btn_register">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/jost_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/green_onboarding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">110dp</item>
        <item name="android:layout_marginRight">110dp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="input_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">8sp</item>
        <item name="android:padding">15sp</item>
        <item name="android:ems">10</item>
        <item name="fontFamily">@font/jost</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@color/divider</item>
    </style>

